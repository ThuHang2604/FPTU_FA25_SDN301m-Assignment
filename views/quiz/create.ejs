<%- include('../partials/header.ejs', { title: title }) %>

<h2>Create New Quiz</h2>

<% if (error) { %>
    <div class="alert alert-danger" role="alert">
        <strong>Lá»—i:</strong> <%= error %>
    </div>
<% } %>

<form action="/quizzes" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= typeof quiz !== 'undefined' ? quiz.title : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea class="form-control" id="description" name="description"><%= typeof quiz !== 'undefined' ? quiz.description : '' %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>


<%- include('../partials/footer.ejs') %>